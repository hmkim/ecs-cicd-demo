{
  "family": "ci-cd-demo-service",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ci-cd-demo-ecs-task-execution-role",
  "taskRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ci-cd-demo-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "{ACCOUNT_ID}.dkr.ecr.ap-northeast-2.amazonaws.com/ci-cd-demo-app:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ci-cd-demo",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "PORT",
          "value": "8080"
        }
      ]
    }
  ]
}
